networks:
  udemy-network:
    driver: bridge
services:
  db:
    build:
      context: C:\Users\lucas.jose\Documents\udemy\RestWithAsp-NET5\02 - RestWithAsp-NET5_QuatroVerbos
      dockerfile: db/Dockerfile
    command: mysqld --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_DATABASE: rest_with_asp_net5
      MYSQL_PASSWORD: docker
      MYSQL_ROOT_PASSWORD: docker
      MYSQL_USER: docker
      TZ: America/Sao_Paulo
    image: rest-with-asp-net5-db
    networks:
      udemy-network: null
    ports:
    - published: 3308
      target: 3306
    restart: always
  rest-with-asp-net5:
    build:
      context: C:\Users\lucas.jose\Documents\udemy\RestWithAsp-NET5\02 - RestWithAsp-NET5_QuatroVerbos
      dockerfile: RestWithAsp-NET5/Dockerfile
    depends_on:
      db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      TZ: America/Sao_Paulo
    image: rest-with-asp-net5
    networks:
      udemy-network: null
    ports:
    - published: 44300
      target: 80
version: '3.4'